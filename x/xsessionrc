# vim: set ft=sh:

xset s off
xset -dpms
xset s noblank
# Faster key repeat and delay
xset r rate 210 40

# Set alignment of monitors
xrandr --output HDMI-A-0 --primary
xrandr --output DisplayPort-2 --auto --right-of HDMI-A-0

feh --bg-scale -g 1920x1080 ~/Downloads/mountains.jpg -g 3840x1440 ~/Downloads/mountains2.jpg 

# set keyboard layout to [US, CZ]
setxkbmap -layout us,cz -variant ,qwerty
# CAPS LED: alternate layout
setxkbmap -option 'grp_led:caps'
# CAPS LOCK is second escape
setxkbmap -option 'caps:escape'
# toggle alternate layout with right CTRL
setxkbmap -option 'grp:rctrl_toggle'
